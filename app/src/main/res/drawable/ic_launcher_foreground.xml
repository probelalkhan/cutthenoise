<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Scale and center the 512x512 logo into the 66x66 safe zone (centered in 108x108) -->
    <!-- Safe zone is 21,21 to 87,87 (66dp). Scale factor: 66/512 = 0.129 -->
    <!-- Offset: 21 + (66 - scaled_content) / 2 -->

    <group
        android:translateX="21"
        android:translateY="21"
        android:scaleX="0.129"
        android:scaleY="0.129">

        <!-- Refracted light rays -->
        <path
            android:pathData="M256,266 L512,170"
            android:strokeWidth="22"
            android:strokeColor="#64748B"
            android:strokeLineCap="round"
            android:fillColor="#00000000"
            android:strokeAlpha="0.9" />
        <path
            android:pathData="M256,266 L512,266"
            android:strokeWidth="22"
            android:strokeColor="#2E7D32"
            android:strokeLineCap="round"
            android:fillColor="#00000000"
            android:strokeAlpha="0.9" />
        <path
            android:pathData="M256,266 L512,362"
            android:strokeWidth="22"
            android:strokeColor="#FF9800"
            android:strokeLineCap="round"
            android:fillColor="#00000000"
            android:strokeAlpha="0.9" />

        <!-- Noisy input wave -->
        <path
            android:pathData="M0,256 L40,220 L80,280 L120,230 L160,270 L200,240 L256,256"
            android:strokeWidth="12"
            android:strokeColor="#FFFFFF"
            android:strokeLineJoin="round"
            android:strokeLineCap="round"
            android:fillColor="#00000000" />

        <!-- Diamond/Prism with gradient -->
        <path
            android:pathData="M256,50 L420,256 L256,462 L92,256 Z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:type="linear"
                    android:startX="92"
                    android:startY="50"
                    android:endX="420"
                    android:endY="462">
                    <item android:offset="0.0" android:color="#6603DAC5" />
                    <item android:offset="1.0" android:color="#CC018786" />
                </gradient>
            </aapt:attr>
        </path>

        <!-- Prism outline -->
        <path
            android:pathData="M256,50 L420,256 L256,462 L92,256 Z"
            android:strokeWidth="12"
            android:strokeColor="#03DAC5"
            android:strokeLineJoin="round"
            android:fillColor="#00000000" />

        <!-- Internal lines -->
        <path
            android:pathData="M256,50 L256,462"
            android:strokeWidth="6"
            android:strokeColor="#03DAC5"
            android:strokeAlpha="0.6"
            android:fillColor="#00000000" />
        <path
            android:pathData="M92,256 L420,256"
            android:strokeWidth="6"
            android:strokeColor="#03DAC5"
            android:strokeAlpha="0.6"
            android:fillColor="#00000000" />

        <!-- Center dot -->
        <path
            android:pathData="M256,256 m-18,0 a18,18 0,1 1,36 0 a18,18 0,1 1,-36 0"
            android:fillColor="#FFFFFF"
            android:fillAlpha="0.9" />
    </group>
</vector>