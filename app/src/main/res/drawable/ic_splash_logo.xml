<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="512dp"
    android:height="512dp"
    android:viewportWidth="512"
    android:viewportHeight="512">

    <group
        android:pivotX="256"
        android:pivotY="256"
        android:scaleX="0.6"
        android:scaleY="0.6">

        <!-- Refracted light rays (behind the prism) -->
        <!-- Stoic ray - Slate Blue -->
        <path
            android:pathData="M256,266 L512,170"
            android:strokeWidth="18"
            android:strokeColor="#64748B"
            android:strokeLineCap="round"
            android:fillColor="#00000000"
            android:strokeAlpha="0.9" />

        <!-- Strategist ray - Emerald Green -->
        <path
            android:pathData="M256,266 L512,266"
            android:strokeWidth="18"
            android:strokeColor="#2E7D32"
            android:strokeLineCap="round"
            android:fillColor="#00000000"
            android:strokeAlpha="0.9" />

        <!-- Optimist ray - Sunset Orange -->
        <path
            android:pathData="M256,266 L512,362"
            android:strokeWidth="18"
            android:strokeColor="#FF9800"
            android:strokeLineCap="round"
            android:fillColor="#00000000"
            android:strokeAlpha="0.9" />

        <!-- Noisy input wave (left side) -->
        <path
            android:pathData="M0,256 L40,220 L80,280 L120,230 L160,270 L200,240 L256,256"
            android:strokeWidth="8"
            android:strokeColor="#FFFFFF"
            android:strokeLineJoin="round"
            android:strokeLineCap="round"
            android:fillColor="#00000000" />

        <!-- Diamond/Prism shape with gradient fill -->
        <path
            android:pathData="M256,50 L420,256 L256,462 L92,256 Z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:type="linear"
                    android:startX="92"
                    android:startY="50"
                    android:endX="420"
                    android:endY="462">
                    <item android:offset="0.0" android:color="#6603DAC5" />
                    <item android:offset="1.0" android:color="#CC018786" />
                </gradient>
            </aapt:attr>
        </path>

        <!-- Prism outline -->
        <path
            android:pathData="M256,50 L420,256 L256,462 L92,256 Z"
            android:strokeWidth="8"
            android:strokeColor="#03DAC5"
            android:strokeLineJoin="round"
            android:fillColor="#00000000" />

        <!-- Internal prism lines -->
        <path
            android:pathData="M256,50 L256,462"
            android:strokeWidth="4"
            android:strokeColor="#03DAC5"
            android:strokeAlpha="0.6"
            android:fillColor="#00000000" />
        <path
            android:pathData="M92,256 L420,256"
            android:strokeWidth="4"
            android:strokeColor="#03DAC5"
            android:strokeAlpha="0.6"
            android:fillColor="#00000000" />

        <!-- Center dot -->
        <path
            android:pathData="M256,256 m-15,0 a15,15 0,1 1,30 0 a15,15 0,1 1,-30 0"
            android:fillColor="#FFFFFF"
            android:fillAlpha="0.8" />
    </group>
</vector>
